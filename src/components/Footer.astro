---
// src/components/Footer.astro
---

<footer class="mt-auto border-t bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand Section -->
      <div class="space-y-4">
        <a href="/" class="flex items-center gap-3 group">
          <img
            src="https://raw.githubusercontent.com/Kxffie/ursinawebsite/refs/heads/main/public/brand/ursina_logo_wireframe.webp"
            alt="Ursina Engine"
            class="h-10 w-auto transition-transform group-hover:scale-105"
          />
          <span class="text-lg font-bold tracking-tight text-foreground">
            Ursina Engine
          </span>
        </a>
        <p class="text-sm text-muted-foreground max-w-xs">
          Free, open-source Python game engine built on Panda3D.
        </p>
      </div>

      <!-- Docs Section -->
      <div class="space-y-2">
        <h4 class="text-sm font-medium text-foreground">Documentation</h4>
        <nav class="flex flex-col space-y-1">
          <a href="docs" class="text-sm text-muted-foreground hover:text-foreground transition-colors">Getting Started</a>
          <a href="docs" class="text-sm text-muted-foreground hover:text-foreground transition-colors">API Reference</a>
          <a href="guides" class="text-sm text-muted-foreground hover:text-foreground transition-colors">Tutorials</a>
          <a href="samples" class="text-sm text-muted-foreground hover:text-foreground transition-colors">Samples</a>
        </nav>
      </div>

      <!-- Community Section -->
      <div class="space-y-2">
        <h4 class="text-sm font-medium text-foreground">Community</h4>
        <nav class="flex flex-col space-y-1">
          <a href="https://discord.gg/ursina" target="_blank" class="text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
            Discord
          </a>
          <a href="https://github.com/pokepetter/ursina" target="_blank" class="text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
            Github
          </a>
          <!-- Add other community links with icons -->
        </nav>
      </div>

      <!-- Donate Section -->
      <div class="space-y-2">
        <h4 class="text-sm font-medium text-foreground">Support Us</h4>
        <nav class="flex flex-col space-y-1">
          <a href="https://github.com/sponsors/pokepetter" target="_blank" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
            GitHub Sponsors
          </a>
          <a href="https://www.patreon.com/c/ursinaengine/" target="_blank" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
            Patreon
          </a>
          <!-- Add other donation links -->
        </nav>
      </div>

      <!-- Legal Section -->
      <div class="space-y-2">
        <h4 class="text-sm font-medium text-foreground">Legal</h4>
        <nav class="flex flex-col space-y-1">
          <a href="/license" class="text-sm text-muted-foreground hover:text-foreground transition-colors">MIT License</a>
          <!-- <a href="/privacy" class="text-sm text-muted-foreground hover:text-foreground transition-colors">Privacy Policy</a> -->
        </nav>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      Â© {new Date().getFullYear()} Ursina Engine. Open source under MIT License.
    </div>
  </div>
</footer>