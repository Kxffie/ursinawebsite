---
// src/components/Footer.astro

let sections = [
  { name: 'Documentation', links: [
    { name: 'Getting Started', href: '/docs' },
    { name: 'API Reference', href: '/api' },
    { name: 'Tutorials', href: '/guides' },
    { name: 'Samples', href: '/samples' },
  ] },
  { name: 'Community', links: [
    { name: 'Discord', href: 'https://discord.gg/ursina' },
    { name: 'GitHub', href: 'https://github.com/pokepetter/ursina' },
  ] },
  { name: 'Support Us', links: [
    { name: 'GitHub Sponsors', href: 'https://github.com/sponsors/pokepetter' },
    { name: 'Patreon', href: 'https://www.patreon.com/c/ursinaengine/' },
  ] },
  { name: 'Legal', links: [
    { name: 'MIT License', href: '/license' },
    // { name: 'Privacy Policy', href: '/privacy' },
  ] },
]

---

<footer class="mt-auto border-t bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand Section -->
      <div class="space-y-4">
        <a data-astro-prefetch="hover" href="/" class="flex items-center gap-3 group">
          <img
            src="https://raw.githubusercontent.com/Kxffie/ursinawebsite/refs/heads/main/public/brand/ursina_logo_wireframe.webp"
            alt="Ursina Engine"
            class="h-10 w-auto transition-transform group-hover:scale-105"
          />
          <span class="text-lg font-bold tracking-tight text-foreground">
            Ursina Engine
          </span>
        </a>
        <p class="text-sm text-muted-foreground max-w-xs">
          Free, open-source Python game engine built on Panda3D.
        </p>
      </div>
    
      {sections.map((section) => (
        <div class="space-y-2">
          <h4 class="text-sm font-medium text-foreground">{section.name}</h4>
          <nav class="flex flex-col space-y-1">
            {section.links.map((link) => (
              <a
                data-astro-prefetch="hover"
                href={link.href}
                target="_blank"
                class="text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2"
              >
                {link.name}
              </a>
            ))}
          </nav>
        </div>
      ))}
    </div>

    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      Â© {new Date().getFullYear()} Ursina Engine. Open source under MIT License.
    </div>
  </div>
</footer>