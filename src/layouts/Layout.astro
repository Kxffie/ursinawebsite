a---
// src/layouts/Layout.astro

import Navbar from '@/components/Navbar.astro'
import Footer from '@/components/Footer.astro'
import '../styles/global.css'

import { ExternalLink } from 'lucide-react'
import { Button } from '@/components/ui/button'
const { title, heroImage, heroDesc, heroSource } = Astro.props


---

<html class="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Ursina Engine | {title}</title>
    <meta
      name="description"
      content="Free, open-source Python game engine."
    />
    <link rel="canonical" href="https://ursinaengine.org{Astro.url.pathname}" />
    <meta name="robots" content="index, follow" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Ursina Engine" />
    <meta property="og:title" content={`Ursina Engine | ${title}`} />
    <meta
      property="og:description"
      content="Free, open-source Python game engine built on Panda3D. Build 2D & 3D games with minimal setup."
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ursinaengine" />
    <meta name="twitter:title" content={`Ursina Engine | ${title}`} />
    <meta
      name="twitter:description"
      content="Free, open-source Python game engine built on Panda3D."
    />

    <meta name="theme-color" content="#0f172a" />

    <script
      is:inline
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-021QZDYMWM"
    ></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-021QZDYMWM');
    </script>
  </head>

  <body>
    <Navbar />

    {/** Hero only if heroImage is provided **/}
    {heroImage ? (
      <section
        class="relative w-full h-[20vh] md:h-[30vh] lg:h-[30vh] bg-cover bg-center"
        style={`background-image: url('${heroImage}')`}
      >
        <div class="absolute inset-0 bg-black/40"></div>
        <div class="relative container mx-auto h-full flex flex-col md:flex-row items-center px-6">
          <div class="md:w-1/2 text-white">
            {title && (
              <h1 class="text-4xl md:text-6xl font-bold max-w-lg mb-4">
                {title}
              </h1>
            )}
            {heroDesc && (
              <p class="mb-6 max-w-md text-lg">
                {heroDesc}
              </p>
            )}
            {heroSource && (
              <a href={heroSource} target="_blank" rel="noopener noreferrer">
                <Button variant="outline" className="flex items-center gap-2">
                  View Source
                  <ExternalLink className="w-4 h-4" />
                </Button>
              </a>
            )}
          </div>
        </div>
      </section>
    ) : null}

    <main>
      <slot />
    </main>

    <Footer />

    <script is:inline>
      document.addEventListener('click', (e) => {
        const link = e.target.closest('a.header-anchor')
        if (!link) return
        e.preventDefault()
        const href = link.getAttribute('href')
        const url = window.location.origin + window.location.pathname + href
        navigator.clipboard.writeText(url).then(() => {
          const msg = document.createElement('div')
          msg.textContent = 'Link copied!'
          Object.assign(msg.style, {
            position: 'fixed',
            bottom: '1rem',
            right: '1rem',
            background: 'rgba(0,0,0,0.8)',
            color: 'white',
            padding: '0.5rem 1rem',
            borderRadius: '0.25rem',
            zIndex: '9999',
          })
          document.body.append(msg)
          setTimeout(() => msg.remove(), 2000)
        })
      })
    </script>

    <script src="//instant.page/5.2.0" type="module" integrity="sha384-jnZyxPjiipYXnSU0ygqeac2q7CVYMbh84q0uHVRRxEtvFPiQYbXWUorga2aqZJ0z"></script>
  </body>
</html>
