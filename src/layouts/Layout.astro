a---
// src/layouts/Layout.astro

import Navbar from '@/components/Navbar.astro'
import Footer from '@/components/Footer.astro'
import '../styles/global.css'

import { ExternalLink } from 'lucide-react'
import { Button } from '@/components/ui/button'
const { title, heroImage, heroDesc, heroSource } = Astro.props

import Analytics from '@vercel/analytics/astro'
import  SpeedInsights  from "@vercel/speed-insights/astro"
---
<!-- DARK MODE DEFAULT -->
<html class="dark" lang="en">
  <head>
    <!-- ASTRO SITEMAP -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- ASTRO SITEMAP -->

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Ursina Engine | {title}</title>
    <meta
      name="description"
      content="Free, open-source Python game engine."
    />
    <link rel="canonical" href="https://ursinaengine.org{Astro.url.pathname}" />
    <meta name="robots" content="index, follow" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Ursina Engine" />
    <meta property="og:title" content={`Ursina Engine | ${title}`} />
    <meta
      property="og:description"
      content="Free, open-source Python game engine built on Panda3D. Build 2D & 3D games with minimal setup."
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ursinaengine" />
    <meta name="twitter:title" content={`Ursina Engine | ${title}`} />
    <meta
      name="twitter:description"
      content="Free, open-source Python game engine built on Panda3D."
    />

    <meta name="theme-color" content="#0f172a" />

    <!-- GOOGLE ANALYTICS -->
    <script
      is:inline
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-021QZDYMWM"
    ></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-021QZDYMWM');
    </script>
  </head>

  <body>
    <!-- NAVBAR -->
    <Navbar />

    <!-- HERO SECTION -->
    {heroImage && (
  <section
    class="relative w-full h-[30vh] sm:h-[30vh] md:h-[40vh] lg:h-[50vh] bg-cover bg-center"
    style={`background-image: url('${heroImage}')`}
  >
    {/* dark overlay */}
    <div class="absolute inset-0 bg-black/40"></div>

    {/* content container */}
    <div class="relative container mx-auto h-full flex flex-col-reverse md:flex-row items-center justify-center md:justify-start px-4">
      {/* text block */}
      <div class="w-full md:w-1/2 text-white text-center md:text-left mb-6 md:mb-0">
        {title && (
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold max-w-lg">
            {title}
          </h1>
        )}
        {heroDesc && (
          <p class="mt-4 text-base sm:text-lg md:text-xl max-w-md mx-auto md:mx-0">
            {heroDesc}
          </p>
        )}
        {heroSource && (
          <div class="mt-6 flex justify-center md:justify-start">
            <a href={heroSource} target="_blank" rel="noopener noreferrer">
              <Button variant="outline" className="flex items-center gap-2">
                View Source
                <ExternalLink className="w-4 h-4" />
              </Button>
            </a>
          </div>
        )}
      </div>

      {/* optional: you could place an image or graphic here on desktop */}
      {/* <div class="hidden md:block md:w-1/2">â€¦</div> */}
    </div>
  </section>
)}



    <!-- MAIN CONTENT -->
    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <Footer />

    <!-- COPY HEADERS FROM MARKDOWN CORRECTLY -->
    <script is:inline>
      document.addEventListener('click', (e) => {
        const link = e.target.closest('a.header-anchor')
        if (!link) return
        e.preventDefault()
        const href = link.getAttribute('href')
        const url = window.location.origin + window.location.pathname + href
        navigator.clipboard.writeText(url).then(() => {
          const msg = document.createElement('div')
          msg.textContent = 'Link copied!'
          Object.assign(msg.style, {
            position: 'fixed',
            bottom: '1rem',
            right: '1rem',
            background: 'rgba(0,0,0,0.8)',
            color: 'white',
            padding: '0.5rem 1rem',
            borderRadius: '0.25rem',
            zIndex: '9999',
          })
          document.body.append(msg)
          setTimeout(() => msg.remove(), 2000)
        })
      })
    </script>
    
    <!-- VERCEL ANALYTICS -->
    <Analytics />
    <SpeedInsights />
    <!-- VERCEL ANALYTICS -->
  </body>
</html>
