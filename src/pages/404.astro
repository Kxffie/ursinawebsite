---
// src/pages/404.astro
import '../styles/global.css';

import Layout from '@/layouts/Layout.astro';
---

<Layout title="404">  
  <!-- Hero Section -->
  <section class="relative w-full h-[100vh] md:h-[100vh] lg:h-[100vh] overflow-hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      poster="ursina_logo_wireframe.webp"
      class="absolute inset-0 object-cover w-full h-full z-0"
    >
      <source src="heros/blood_reworking_test.webm" type="video/webm" />
    </video>
    <div class="absolute inset-0 bg-black/40 backdrop-blur-sm z-10"></div>

    <div
      class="relative z-20 container mx-auto h-full px-6 flex flex-col items-start justify-center text-white"
    >
      <h1 class="text-4xl md:text-6xl font-bold max-w-lg mb-4">
        What did you break this time?
      </h1>
      <p class="mb-6 max-w-md text-lg">
        Error 404 - Page not found. The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
      </p>
    </div>

    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
  </section>
</Layout>