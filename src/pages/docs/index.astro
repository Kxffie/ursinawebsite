---
import Sidebar from '@/components/Sidebar.astro';
import Layout from '@/layouts/Layout.astro';
import { getSidebarData } from '@/lib/getSidebarData';
import { Eye, BookOpen, PlayCircle, Bug, MessageCircleCode } from 'lucide-react';

const base = 'docs';
const { categories, grouped } = await getSidebarData(base);

let helpSection = [
  { name: 'Docs', href: '/docs', icon: BookOpen, desc: "Beginner docs to help start your next project." },
  { name: 'Samples', href: '/samples', icon: Eye, desc: "Explore sample projects to see how things work." },
  { name: 'Tutorials', href: '/tutorials', icon: PlayCircle, desc: "Follow step-by-step tutorials to get started quickly." }
]

let bugSection = [
  { name: 'GitHub Issues', href: 'https://github.com/pokepetter/ursina/issues', icon: Bug, desc: "Report bugs or request features." },
  { name: 'Discord', href: 'https://discord.gg/ursina', icon: MessageCircleCode, desc: "Join our community for help and support." }
]
---

<Layout
  title="Documentation"
  heroImage="https://github.com/pokepetter/ld44_life_is_currency/blob/master/value_of_life_screenshot.jpg?raw=true"
  heroDesc="Beginner documentation for the Ursina Engine"
>
  <section class="py-16 bg-background/95 dark:bg-background">
    <div class="container mx-auto px-6 flex gap-8">
      <Sidebar {categories} {grouped} />

      <main class="flex-1 space-y-8">
        <!-- Intro blurb -->
        <section>
          <h2 class="text-2xl font-bold mb-2">Welcome to the Docs</h2>
          <p class="text-lg">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vitae corrupti molestiae ex pariatur. Nulla similique asperiores sunt, ipsum aliquid ea deserunt alias nobis error dicta exercitationem non eaque nam iure!
          </p>
        </section>

        <!-- HELP SECTION -->
        <section class="pt-8">
          <h3 class="text-xl font-semibold mb-4">Need help?</h3>
          <p class="mb-6 text-lg">
            Check out these resources for examples, guides, and tutorials.
          </p>
          <div class={`grid grid-cols-1 sm:grid-cols-${helpSection.length} gap-6`}>
            {helpSection.map(({ href, icon: Icon, name, desc }) => (
              <a
                href={href}
                class="bg-card rounded-lg shadow hover:shadow-md transition px-6 py-5 hover:scale-105 active:scale-95"
              >
                <div class="flex items-center gap-6">
                  <Icon className="w-8 h-8 text-primary flex-shrink-0" />
                  <div>
                    <h4 class="font-semibold mb-1">{name}</h4>
                    <p class="text-sm">{desc}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- BUG SECTION -->
        <section class="pt-8">
          <h3 class="text-xl font-semibold mb-4">Something wrong?</h3>
          <p class="mb-6 text-lg">
            If you find a bug or have a suggestion, please let us know on our Github Issues tracker or join the Discord.
          </p>
          <div class={`grid grid-cols-1 sm:grid-cols-${bugSection.length} gap-6`}>
            {bugSection.map(({ href, icon: Icon, name, desc }) => (
              <a
                href={href}
                class="bg-card rounded-lg shadow hover:shadow-md transition px-6 py-5 hover:scale-105 active:scale-95"
              >
                <div class="flex items-center gap-6">
                  <Icon className="w-8 h-8 text-primary flex-shrink-0" />
                  <div>
                    <h4 class="font-semibold mb-1">{name}</h4>
                    <p class="text-sm">{desc}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      </main>
    </div>
  </section>

  
</Layout>
